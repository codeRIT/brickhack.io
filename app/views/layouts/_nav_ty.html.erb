<%
  pages = ['Gallery'] 
%>

<nav class="section nav">
  <div class="nav__links">
    <% pages.each do |page| %>
      <a class="nav__link" href="/<%= page.downcase %>">
        <%= page %>
      </a>
    <% end %>
  </div>
  <div class="nav__buttons">
    <% if current_user %>
      <% if current_user.admin? || current_user.admin_limited_access? %>
        <%= btn_link_to 'Manage', manage_dashboard_index_path %>
      <% else %>
        <%= btn_link_to 'My Account', questionnaires_path %>
      <% end %>
    <% end %>
  </div>
</nav>

