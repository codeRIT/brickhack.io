<%
  simplified_nav = false if !defined?(simplified_nav)
  if simplified_nav
    pages = ['Home']
  else
    pages = ['About', 'Schedule', 'Travel', 'FAQ', 'Sponsors']
  end
  live_path = current_page?(:controller => 'pages', :action =>'live')
%>

<nav class="nav">
  <div class="nav__content">
    <div class="nav__links">
      <% pages.each do |page| %>
        <% if simplified_nav %>
          <a class="nav__link" href="/">
            <%= page %>
          </a>
        <% else %>
          <a class="nav__link" href="#<%= page.downcase %>">
            <%= page %>
          </a>
        <% end %>
      <% end %>
      <!-- %a.nav__link{ href: "https://brickhackv.devpost.com", target: 'blank' }= 'Prizes' -->
      <%= btn_link_to 'Live', '/live' %>
    </div>
    <div class="nav__buttons">
      <%= btn_link_to 'Sign Up', 'https://apply.brickhack.io' %>
    </div>
  </div>
</nav>

