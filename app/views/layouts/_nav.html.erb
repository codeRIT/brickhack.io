<%
  simplified_nav = false if !defined?(simplified_nav)
  if simplified_nav
    pages = ['Home']
  else
    pages = ['About', 'Schedule', 'Travel', 'Gallery', 'FAQ', 'Sponsors', 'Live']
  end
  live_path = current_page?(:controller => 'pages', :action =>'live')
%>
<nav class="nav">
  <div class="nav__content">
    <a href="/">
      <%= image_tag 'bh-logos/brickhack-6.png', alt: 'BrickHack 6 Logo', class: 'nav__logo' %>
    </a>
    <div class="nav__links">
      <% pages.each do |page| %>
        <% if page == 'Live' %>
          <div id="live__button" style="display:none">
            <a class="nav__link" href="/live">
              <%= page %>
            </a>
          </div>
        <% elsif page == 'Schedule' %>
          <!--change display to 'block' when schedule is posted-->
          <div id="schedule__button" style="display:none">
            <a class="nav__link" href="#schedule">
              <%= page %>
            </a>
          </div>          
        <% elsif page == 'Gallery' %>
          <a class="nav__link" href="/gallery/">
            <%= page %>
          </a>
        <% else %>
          <a class="nav__link" href="#<%= page.downcase %>">
            <%= page %>
          </a>
        <% end %>
      <% end %>
    </div>
    <div class="nav__signup__button">
      <%= btn_link_to 'Sign In', 'https://apply.brickhack.io' %>
    </div>
  </div>

  <a id="mlh-trust-badge" style="display:block;max-width:100px;min-width:60px;position:fixed;right:50px;top:0;width:10%;z-index:10000" 
  href="https://mlh.io/seasons/na-2020/events?utm_source=na-hackathon&utm_medium=TrustBadge&utm_campaign=2020-season&utm_content=gray" target="_blank">
    <img src="https://s3.amazonaws.com/logged-assets/trust-badge/2020/mlh-trust-badge-2020-gray.svg" alt="Major League Hacking 2020 Hackathon Season" style="width:100%">
  </a>
</nav>

<script>
  var now = new Date();
  var start = new Date('Feb 07 2020 00:00');
  var end = new Date('Feb 10 2020 00:00');
  if (now >= start && now <= end){
    document.getElementById("live__button").style.display = "block";
  }
</script>
