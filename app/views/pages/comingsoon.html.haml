.page.triangle-background.split
  .split-left#split-left
    .center-vertical.plus-nav
      = image_tag 'coming_soon/BH5Logo.svg', { id: 'logo', class: 'wow rotate-in', align: 'center'}
      %br
      %h2 Coming Soon
      %p
        %em Enter your email below! We'll keep you posted.
      #mc_embed_signup
        %form.validate#mc-embedded-subscribe-form{ action: "//coderit.us11.list-manage.com/subscribe/post?u=122b09a8cef4c1f3888af8e40&amp;id=be625a634d", method: "post", name: "mc-embedded-subscribe-form", novalidate: "", target: "_blank" }
          #mc_embed_signup_scroll
            .mc-field-groupe
              %input.required.email#mce-EMAIL{ name: "EMAIL", type: "email", value: "", placeholder: "myemail@example.com", autofocus: true, style: "width: 90%; max-width: 300px" }
            .clear#mce-responses
              .response#mce-error-response{ style: "display:none" }
              .response#mce-success-response{ style: "display:none" }
            / real people should not fill this in and expect good things - do not remove this or risk form bot signups
            %div{ style: "position: absolute; left: -5000px;" }
              %input{ name: "b_122b09a8cef4c1f3888af8e40_be625a634d", tabindex: "-1", type: "text", value: "" }/
            .clear
              %input.button#mc-embedded-subscribe{ name: "subscribe", type: "submit", value: "Join the mailing list" }/
      - if current_user
        - if current_user.admin
          = link_to manage_dashboard_index_path do
            .button MANAGE
        - else
          = link_to questionnaires_path do
            .button MY ACCOUNT
      = btn_link_to 'Sponsor Info', image_path("BrickHack 4 Sponsorship Information.pdf"), { style: 'margin-bottom: 0px;' }
      %br
      .social-list{ style: "margin-top: 30px" }
        %p{ style: "float: left;" }
        = link_to '<span class="fa fa-twitter-square fa-fw"></span> Twitter'.html_safe, 'https://twitter.com/brickhackrit'
        %p{ style: "float: right;" }
        = link_to '<span class="fa fa-facebook-square fa-fw"></span> Facebook'.html_safe, 'https://www.facebook.com/brickhackrit'
        %p{ style: "float: right;" }
        = link_to '<span class="fa fa-user-circle fa-fw"></span> CampusGroups'.html_safe, 'https://campusgroups.rit.edu/CODERIT/club_signup'
