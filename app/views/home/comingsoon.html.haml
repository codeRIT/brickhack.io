          .clear
            %input.button#mc-embedded-subscribe{ name: "subscribe", type: "submit", value: "Subscribe" }/
    - if current_user
      - if current_user.admin
        = link_to manage_dashboard_index_path do
          .button MANAGE
      - else
        = link_to questionnaires_path do
          .button MY ACCOUNT
